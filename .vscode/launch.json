{
    // Configurations for debugging Flask applications
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py", // Replace with your Flask app entry point
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--debug"
            ],
            "jinja": true
        }
    ]
}